@model List<Producto>

@{
    ViewData["Title"] = "Home Page";
}


    <h1 class="display-4">Lista de productos a la venta</h1>
    

    @if (Model.Count == 0) {
        <p>No hay ningun producto.</p>
    }
    
    //? esta al lado de un objeto significa q tiene q estar lleno para mostrar
    @foreach (var Producto in Model) {
      <p>Nombre del producto: @Producto.NameP</p>
        <img class="img-responsive" width="190" height="200" src="/img/@Producto.Image"
                                        alt="@Producto.Image" />
      
      
      <p>Descripcion: @Producto.Descripcion</p>
      <p>Precio: $@Producto.Price</p>
      <p>Celular: @Producto.cell</p>
      <p>Lugar de compra: @Producto.Place</p>
      <p>Nombre del Comprador: @Producto.NameC</p>
      <p>Categoria: @Producto.Categoria</p>

    }
